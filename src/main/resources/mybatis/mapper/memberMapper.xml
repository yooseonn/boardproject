<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.app.boardproject.mapper.MemberMapper">

    <select id="memberList" resultType="com.app.boardproject.domain.Member">
        SELECT * FROM member;
    </select>

    <insert id="insertMember" parameterType="com.app.boardproject.domain.Member">
        INSERT INTO member1(userIdx, userId, userName, userPwd, email, membership)
        VALUES (null, #{userId}, #{userName}, #{userPwd}, #{email}, 1)
    </insert>

</mapper>
